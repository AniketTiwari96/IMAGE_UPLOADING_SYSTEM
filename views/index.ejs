<html>
<head>
  <title>User Registration</title>
  <style>
    body{
      display: flex;
      align-items: center;
      background-color: rgb(254, 246, 246);
    }
    .main{
      /* border: 1px solid red; */
      width: 30%;
      margin: auto;
      text-align: center;
      border-top-right-radius: 25px;
      border-bottom-left-radius: 25px;
      box-shadow: 1px 1px 5px 5px rgba(0, 0, 0, 0.2);
      background-color: #f7f3f3;

    }
    input[type=file]{
      border: 2px solid grey;

    }
    input{
      margin-top: 20px;
      width: 80%;
      font-size: 18px;
      padding: 8px;
      border: 2px solid grey;
      border-radius: 10px;
     
    }
    .button{
      /* border: 2px solid green; */
      
      width: 80%;
      margin: auto;
      margin-top: 20px;
      display: flex;
      justify-content: space-between;

    }
    button,a{
      padding: 7px;
      /* border: 2px solid red; */
      width: 50%;
      font-size: 18px;
      border-radius: 10px;
      border: 2px solid grey;
      margin-bottom: 10px;
    }

 

  </style>
</head>
<body>
  <div class="main">
    <% if (error) { %>
      <script>
              alert('<%= error %> <%= additionalText %>'); // Display the error message and additional text in an alert

      </script>
    <% } %>

    <h1>User Registration</h1>
    <form action="/register" method="POST" enctype="multipart/form-data">
      <div>
  
        <input type="text" name="name" placeholder="Name">
      </div>
      <div>
  
        <input type="email" name="gmail" placeholder="gmail">
      </div>
      <div>
  
        <input type="password" name="password" placeholder="Password">
      </div>

      <div class="inputbox">
        <!-- <label for="image" class="lbl">Image:</label> -->
        <input type="file" id="image" name="image" required>
      </div>

      <div class="button">

        <button type="submit">Register</button>
         <a href="http://localhost:4000/login">login</a>
      </div>
    </form>
  </div>
</body>
</html>