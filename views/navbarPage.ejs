<!DOCTYPE html>
<html>

<head>
    <title>User Data</title>
    <style>
        /* Your CSS styles for the navbar */
        *{
            margin: 0px;
        }
        .navbar {
            height: 70px;
            background-color: #19708a;

        }

        .navbar ul {
            display: flex;
        }
        .box1{
            display: flex;
            justify-content: space-between;
            width: 34%;
            position: absolute;
            right: 30px;
            top: 10;
            box-sizing: border-box;
            height: 70px;
        }
        .box1 .profileImagebox li{
            width: 50px;
            height: 50px;
            margin-top: 8px;
            border: 1px solid grey;
            border-radius: 25px;

        }
        .box1 .profileImagebox li img{
            width: 100%;
            height: 50px;
            border-radius: 25px;
            /* border: 2px so; */
        }
        .box1 .libox{
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 70px;
            box-sizing: border-box;
            width: 100%;
            margin-right: 20px;
        }

        .navbar li {
            margin-left: 30px;
            list-style: none;
            color: black;
        }
        .navbar li a{
            color: rgb(61, 53, 53);
        }
        h2{
            margin-top: 25%;
            
        }
        .libox .signup-btn{
            border: 1px solid grey;
            padding: 8px;
            text-decoration: none;
            background-color:yellow;
            font-size: 18px;
        }
        .libox .signup-btn:hover{
            border: 1px solid grey;
            background-color:rgb(14, 220, 243);
        }
        .profile {
            width: 44px;
        }
        /* ================== */
        .table {
            width: 50%;
            border-collapse: collapse;
            border: 2px solid grey;
            position: relative;
            top: 70px;
            margin: auto;
        }
    
        th, td {
            padding: 4px;
            border-bottom: 2px solid #ddd;
        }
        td{
            text-align: center;
            border: 2px solid grey;
        }
        tr th{
            padding: 10px;
            font-size: 25px;
            border: 2px solid grey;
        }
        td img{
            width: 100px;
            height:auto;
        
            margin: 20px;

        }
        td,embed{
            margin: 20px;
        
        }
        h1{
            text-align: center;
        };
        .anc {
            width: 700px;
        
            height: auto;
            font-size: 30px;
        }
        a{
            width: 100px;
            height: auto;
            padding: 5px;
        
            margin-top: 10px;
            background-color: rgb(42, 225, 249);
            color: black;
        }
        tr td{
            background-color: #dddddd;
            border: 2px solid grey;
        }
        p{
            color: black;
        }

    </style>
</head>

<body>
    <!-- Navbar -->
    <!-- <h2>navbar</h2> -->
    <div class="navbar">
        <ul>
            <% data.forEach(item=> { %>
                <div class="h2">
                    <h2>Navbar</h2>
                </div>
                <div class="box1">
                    <div class="libox">
                        <li><a class="signup-btn" href="http://localhost:4000/register">Sign Up</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/login">Login</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/uploadImageFile">Upload Image</a></li>
                        <li><a class="signup-btn" href="http://localhost:4000/updatedata">Update Profile</a></li>
                    </div>
                    <div class="profileImagebox">                    
                        <li class="profile">
                            <% if (item.profile) { %>
                                <% if (item.profile.endsWith('.png') || item.profile.endsWith('.jpg') || item.profile.endsWith('.jpeg') || item.profile.endsWith('.webp')) { %>
                                    <img class="profile-image" src="<%= item.profile %>" alt="Image">
                            <% } else { %>
                                    <p>Invalid Format</p>
                                <% } %>
                            <% } %>
                        </li>
                    </div>
                </div>
            <% }) %>
        </ul>
    </div>

    <!-- <h1>User Data</h1> -->

    <table class="table">
        <tr>
          <th>Uploaded User Data</th>
        </tr>
        
        <% data.forEach(item => { %>
          <tr>
            <td>
              <% if (item.proifleImages && Array.isArray(item.proifleImages)) { %>
                <% item.proifleImages.forEach(image => { %>
                  <% if (image.endsWith('.png') || image.endsWith('.jpg') || image.endsWith('.jpeg') || image.endsWith('.webp')) { %>
                    <img src="<%= image %>" alt="Image">
                  <% } else if (image.endsWith('.pdf')) { %>
                    <embed src="<%= image %>" type="application/pdf" width="100px" height="100px" alt="Profile Image" />
                  <% } else { %>
                    <p>Invalid Format</p>
                  <% } %>
                <% }) %>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </table>    
  



</body>

</html>