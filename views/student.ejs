<!DOCTYPE html>
<html>
<head>
  <title>Student Images</title>
  <style>
    *{
      margin: 0px;
    }
    table {
      width: 90%;
      margin: auto;
      border-collapse: collapse;
      margin-top: 50px;
    }
    tr th{
      font-size: 20px;
    }
    
    th, td {
      padding: 4px;
      /* text-align: left; */
      border-bottom: 2px solid #ddd;
    }
    td{
        text-align: center;
        margin-left: 100px;  
    }
    td img{
        width: 100px;
        height:auto;
        margin: 20px;

    }
    td,embed{
        margin: 20px;
        width: 100px;
        height:110px;
    }
    h1{
        text-align: center;
    }
    .anchorbox {
      line-height: 70px;
      background-color: #19708a;
      text-align: center;
  
    }
    .signup-btn{
            border: 1px solid grey;
            padding: 8px;
            text-decoration: none;
            background-color:yellow;
            font-size: 18px;
            box-sizing: border-box;
    }
    .signup-btn:hover{
            border: 1px solid grey;
            background-color:rgb(14, 220, 243);
    }

    tr th{
            padding: 10px;
            font-size: 25px;
            border: 2px solid grey;
        }
        td{
            text-align: center;
            border: 2px solid grey;
        }
    tr:nth-child(even) {
        background-color: #dddddd;
    }

  </style>
</head>
<body>
    <div class="anchorbox">
      
        <a class="signup-btn" class="ancor" href="http://localhost:4000/readAlldata">Home page</a>
        <a class="signup-btn" href="http://localhost:4000/register">register</a>
        <a class="signup-btn" href="http://localhost:4000/login">login</a>
        <a class="signup-btn" href="http://localhost:4000/logout">log-out</a>
        <a class="signup-btn" href="http://localhost:4000/uploadImageFile">Upload Image</a>
        <a class="signup-btn" href="http://localhost:4000/updatedata">Update Profile</a>
        <a class="signup-btn" href="http://localhost:4000/readData">Show User Data</a>

    </div>
    <table class="table">
        <tr>
          <th>uploade User Data</th>
        </tr>
        
        <% data.forEach(item => { %>
          <tr>
            <td>
              <% if (item.proifleImages && Array.isArray(item.proifleImages)) { %>
                <% item.proifleImages.forEach(image => { %>
                  <% if (image.endsWith('.png') || image.endsWith('.jpg') || image.endsWith('.jpeg') || image.endsWith('.webp')) { %>
                    <img src="<%= image %>" alt="Image">
                  <% } else if (image.endsWith('.pdf')) { %>
                    <embed src="<%= image %>" type="application/pdf" width="100px" height="100px" alt="Profile Image" />
                  <% } else { %>
                    <p>Invalid Format</p>
                  <% } %>
                <% }) %>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </table>    
</body>
    

